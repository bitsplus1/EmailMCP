# Outlook MCP Server Environment Configuration
# Copy this file to .env and modify the values as needed

# Configuration file path (optional)
# OUTLOOK_MCP_CONFIG_FILE=outlook_mcp_server_config.json

# Logging configuration
OUTLOOK_MCP_LOG_LEVEL=INFO
OUTLOOK_MCP_LOG_DIR=logs

# Server performance settings
OUTLOOK_MCP_MAX_CONCURRENT=10
OUTLOOK_MCP_REQUEST_TIMEOUT=30
OUTLOOK_MCP_CONNECTION_TIMEOUT=10

# Feature toggles
OUTLOOK_MCP_PERFORMANCE_LOGGING=true
OUTLOOK_MCP_CONSOLE_OUTPUT=true

# Server mode (stdio for MCP client integration, standalone for testing)
OUTLOOK_MCP_SERVER_MODE=stdio

# Health check interval in seconds (for standalone mode)
OUTLOOK_MCP_HEALTH_CHECK_INTERVAL=30

# Optional: Health check endpoint configuration (for monitoring)
# OUTLOOK_MCP_HEALTH_PORT=8080
# OUTLOOK_MCP_HEALTH_HOST=localhost