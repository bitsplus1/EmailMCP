# EmailMCP Configuration
# Copy this file to .env and fill in your actual credentials

# Outlook/Office 365 Configuration
# Get these from Azure App Registration: https://portal.azure.com/
OUTLOOK_CLIENT_ID=your_outlook_client_id_here
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret_here
OUTLOOK_TENANT_ID=your_outlook_tenant_id_here
OUTLOOK_REDIRECT_URI=http://localhost:8080/callback

# Exchange Server Configuration (alternative to Outlook)
EXCHANGE_SERVER=your_exchange_server_here
EXCHANGE_USERNAME=your_exchange_username_here
EXCHANGE_PASSWORD=your_exchange_password_here
EXCHANGE_DOMAIN=your_exchange_domain_here
EXCHANGE_AUTODISCOVER=true

# Server Configuration
LOG_LEVEL=INFO
MAX_EMAILS_PER_REQUEST=100
CACHE_TTL=300
TIMEOUT=30